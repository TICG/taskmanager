@model Portal.Areas.DbAssessment.Pages._TaskInformationModel
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="panel panel-default">
    <div class="panel-heading">
        <span>Task Information</span>
    </div>

    <div class="col-lg-12">
        <div class="row" style="padding-left: 5px;">
            <div class="panel-body">
                <div class="col-xs-3">
                    <div class="form-row">
                        @Html.LabelFor(model => model.ProcessId)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.ProcessId)
                        </div>
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.DmEndDate)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.DmEndDate)
                        </div>
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.EffectiveReceiptDate)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.EffectiveReceiptDate)
                        </div>
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.OnHold)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.OnHold)
                        </div>
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.Ion)
                        <div class="pull-right">
                            @Html.TextBoxFor(model => model.Ion, new { @class = "form-control", style = "width:120px;" })
                        </div>
                        <br />
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.ActivityCode)
                        <div class="pull-right">
                            @Html.TextBoxFor(model => model.ActivityCode, new { @class = "form-control", style = "width:120px;" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-5" style="padding-left: 200px;">
                    <div class="form-row">
                        @Html.LabelFor(model => model.DmReceiptDate)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.DmReceiptDate)
                        </div>
                    </div>
                    <div class="form-row">
                        @Html.LabelFor(model => model.ExternalEndDate)
                        <div class="pull-right">
                            @Html.DisplayFor(model => model.ExternalEndDate)
                        </div>
                    </div>
                    @Html.LabelFor(model => model.SourceCategory)
                    <div class="pull-right">
                        @Html.DropDownListFor(model => model.SourceCategory, Model.SourceCategories, new { @class="form-control", style = "width:260px;" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
